<Window x:Class="ATMProject.WithdrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATMProject"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="WithdrawWindow" Height="1024" Width="1280" Background="Black" ContentRendered="Window_ContentRendered">
    <Grid Width="1280" Height="1024" Background="White">
        <Border BorderBrush="#FF092D4B" BorderThickness="0,150">
            <Border BorderThickness="0,0,5,5" Margin="1047,595,50,20" Background="#FF092D4B" MouseDown="exitButtonPush" Width="177" Height="107" CornerRadius="10" BorderBrush="Black" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Image Height="90" Width="90" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Source="Assests/Icons/Exit.png"/>
            </Border>
        </Border>
        <Grid x:Name="contentGrid" HorizontalAlignment="Center" Height="642" Margin="0" VerticalAlignment="Center" Width="674">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="#FF095E8F" BorderThickness="0,0,5,5" Margin="3" CornerRadius="10" Background="#FF0A8DD8">
                <Label Content="£5" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" MouseDown="WithdrawButtonPush"/>
            </Border>
            <Border BorderBrush="#FF095E8F" BorderThickness="0,0,5,5" Margin="3" CornerRadius="10" Grid.Row="2" Background="#FF0A8DD8">
                <Label Content="£20" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" MouseDown="WithdrawButtonPush"/>
            </Border>
            <Border BorderBrush="#FF095E8F" BorderThickness="0,0,5,5" Margin="3" CornerRadius="10" Grid.Row="3" Background="#FF0A8DD8">
                <Label Content="£50" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" MouseDown="WithdrawButtonPush"/>
            </Border>
            <Border BorderBrush="#FF095E8F" BorderThickness="0,0,5,5" Margin="3" CornerRadius="10" Grid.Row="3" Grid.Column="1" Background="#FF0A8DD8">
                <Label Content="..." FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" MouseDown="customAmountButtonPush" />
            </Border>
            <Border BorderBrush="#FF095E8F" BorderThickness="0,0,5,5" Margin="3" CornerRadius="10" Grid.Column="1" Background="#FF0A8DD8">
                <Label Content="£100" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" MouseDown="WithdrawButtonPush"/>
            </Border>
            <Border BorderBrush="#FF095E8F" BorderThickness="0,0,5,5" Margin="3" CornerRadius="10" Grid.Column="1" Grid.Row="2" Background="#FF0A8DD8">
                <Label Content="£200" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" MouseDown="WithdrawButtonPush"/>
            </Border>
            <Border BorderBrush="#FF095E8F" BorderThickness="0,0,5,5" Margin="3" CornerRadius="10" Grid.Row="1" Grid.Column="1" Background="#FF0A8DD8">
                <Label Content="£150" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" MouseDown="WithdrawButtonPush"/>
            </Border>
            <Border BorderBrush="#FF095E8F" BorderThickness="0,0,5,5" Margin="3" CornerRadius="10" Grid.Row="1" Background="#FF0A8DD8">
                <Label Content="£10" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" MouseDown="WithdrawButtonPush"/>
            </Border>
        </Grid>
        <Border Margin="50,170,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF092D4B" Width="140" Height="120" MouseDown="backButtonPush" BorderBrush="Black" BorderThickness="0,0,5,5" CornerRadius="10">
            <Image Source="Assests/Icons/White-Arrow.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="90" Stretch="Fill"/>
        </Border>
        <Border BorderThickness="0,0,5,5" Margin="0,170,50,0" Background="#FF092D4B" MouseDown="changeCurrencyButtonPush" Width="177" Height="107" CornerRadius="10" BorderBrush="Black" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Image Height="90" Width="90" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Source="Assests/Icons/CurrencyChange.png"/>
        </Border>
    </Grid>
</Window>
